<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.wishlist.wishlist">


        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       app:cardCornerRadius="20dp"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/colorProfile"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center_vertical"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal"
                           >
                           <ImageView
                               android:layout_marginStart="10dp"
                               android:layout_width="100dp"
                               android:layout_height="100dp"
                               android:src="@drawable/lap3"
                               />
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_marginTop="3dp"
                                   android:layout_width="wrap_content"
                                   android:text="Samsung Laptop"
                                   android:textStyle="bold"
                                   android:layout_height="wrap_content"/>
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_marginTop="3dp"
                                   android:textStyle="italic"
                                   android:text="LKR 125000.00"
                                   android:layout_height="wrap_content"/>

                           </LinearLayout>
                           <android.widget.Button
                               android:layout_marginStart="25dp"
                               android:background="@drawable/btn_redbackground"
                               android:layout_width="wrap_content"
                               android:textSize="13sp"
                               android:textAllCaps="true"
                               android:text="Remove"
                               android:textColor="@android:color/white"
                               android:layout_height="wrap_content"/>


                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       app:cardCornerRadius="20dp"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginBottom="10dp"
                       app:cardBackgroundColor="@color/colorProfile"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center_vertical"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal"
                           >
                           <ImageView
                               android:layout_marginStart="10dp"
                               android:layout_width="100dp"
                               android:layout_height="100dp"
                               android:src="@drawable/cam4"
                               />
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_marginTop="3dp"
                                   android:layout_width="wrap_content"
                                   android:text="Canon Camera"
                                   android:textStyle="bold"
                                   android:layout_height="wrap_content"/>
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_marginTop="3dp"
                                   android:textStyle="italic"
                                   android:text="LKR 12000.00"
                                   android:layout_height="wrap_content"/>

                           </LinearLayout>
                           <android.widget.Button
                               android:layout_marginStart="25dp"
                               android:background="@drawable/btn_redbackground"
                               android:layout_width="wrap_content"
                               android:textSize="13sp"
                               android:textAllCaps="true"
                               android:text="Remove"
                               android:textColor="@android:color/white"
                               android:layout_height="wrap_content"/>


                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       app:cardCornerRadius="20dp"
                       android:layout_marginStart="10dp"
                       android:layout_marginEnd="10dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginBottom="10dp"
                       app:cardBackgroundColor="@color/colorProfile"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_gravity="center_vertical"
                           android:layout_marginTop="10dp"
                           android:orientation="horizontal"
                           >
                           <ImageView
                               android:layout_marginStart="10dp"
                               android:layout_width="100dp"
                               android:layout_height="100dp"
                               android:src="@drawable/bag1"
                               />
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_marginTop="3dp"
                                   android:layout_width="wrap_content"
                                   android:text="girls Black Bag"
                                   android:textStyle="bold"
                                   android:layout_height="wrap_content"/>
                               <TextView
                                   android:layout_marginStart="10dp"
                                   android:layout_width="wrap_content"
                                   android:layout_marginTop="3dp"
                                   android:textStyle="italic"
                                   android:text="LKR 200.00"
                                   android:layout_height="wrap_content"/>

                           </LinearLayout>
                           <android.widget.Button
                               android:layout_marginStart="25dp"
                               android:background="@drawable/btn_redbackground"
                               android:layout_width="wrap_content"
                               android:textSize="13sp"
                               android:textAllCaps="true"
                               android:text="Remove"
                               android:textColor="@android:color/white"
                               android:layout_height="wrap_content"/>


                       </LinearLayout>
                   </androidx.cardview.widget.CardView>
               </LinearLayout>

            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>